<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@android:color/transparent">

    <!--<ImageView-->
    <!--android:id="@+id/iv_error"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="200dp"-->
    <!--app:srcCompat="@drawable/ic_base_error"-->
    <!--/>-->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_error_view"
        android:layout_width="@dimen/dp_150"
        app:lottie_fileName="lottie/halloween_smoothymon.json"
        app:lottie_imageAssetsFolder="lottie/images/"
        android:layout_height="@dimen/dp_150"
        />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:paddingTop="@dimen/dp_5"
        android:text="您的手机网络不太顺畅~"
        android:textColor="@color/font_black"
        android:textSize="@dimen/dp_17" />

    <TextView
        android:id="@+id/tv_error_hint"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_5"
        android:text="请检查您的手机是否联网"
        android:textColor="@color/font_blue"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/base_solid_stroke_corner"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:text="重新加载"
        android:textColor="@color/font_blue"
        android:textSize="@dimen/dp_14" />


</LinearLayout>
