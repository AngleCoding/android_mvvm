<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4FAFF">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_login_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_280"/>


        <RelativeLayout
            android:background="@drawable/shape_round_ffffff_corner_10dp"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_200"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_345">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="#46577E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欢迎登录"
                        android:textSize="@dimen/dp_20"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_linear_color"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_2"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_27"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_27"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_user_pb_2" />

                    <EditText
                        android:textColorHint="#8696BC"
                        android:textColor="#333333"
                        android:id="@+id/et_username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:hint="请输入账号"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="16"
                        android:textSize="@dimen/dp_14"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:padding="@dimen/dp_12"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_delete"
                        />
                </LinearLayout>
                <View
                    android:layout_marginEnd="@dimen/dp_27"
                    android:layout_marginStart="@dimen/dp_27"
                    android:background="#f3f3f3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_27"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_27"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_lock_pb_2" />

                    <EditText
                        android:textColorHint="#8696BC"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#333333"
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLength="16"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        />
                </LinearLayout>
                <View
                    android:layout_marginEnd="@dimen/dp_27"
                    android:layout_marginStart="@dimen/dp_27"
                    android:background="#f3f3f3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_27"
                    android:layout_gravity="right|center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_marginRight="@dimen/dp_8"
                        android:id="@+id/mCbSave"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_20"/>

                    <TextView
                        android:textSize="@dimen/dp_13"
                        android:textColor="#2E81FF"
                        android:text="保存密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <Button
                    android:elevation="@dimen/dp_3"
                    android:id="@+id/btn_login"
                    android:layout_height="@dimen/dp_45"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="@drawable/shape_linear_startcolor_42a8f6_endcolor_2e81ff"
                    android:text="登录"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@android:color/white"/>

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>